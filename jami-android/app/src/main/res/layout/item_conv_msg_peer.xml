<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txt_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/msg_details_txt_perm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/textColorSecondary"
        android:textSize="@dimen/conversation_timestamp_textsize"
        android:visibility="gone"
        tools:text="@string/time_just_now"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/msg_details_txt_perm">

        <Space
            android:id="@+id/msg_space"
            android:layout_width="0dp"
            android:layout_height="0dp"            
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/msg_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/msg_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="5"
            android:gravity="start"
            app:layout_constraintEnd_toStartOf="@id/msg_space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/msg_reply_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toTopOf="@id/message_bubble"
                app:layout_constraintStart_toEndOf="@id/photo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/reply_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    app:layout_constraintBottom_toTopOf="@id/msg_reply_txt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/msg_in_reply_to"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/in_reply_to"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/conversation_timestamp_textsize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/msg_reply_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="middle"
                        android:gravity="center_vertical"
                        android:maxWidth="200dp"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/conversation_timestamp_textsize"
                        android:textStyle="bold"
                        tools:drawableStart="@drawable/baseline_delete_16"
                        tools:text="Bob" />
                </LinearLayout>

                <Space
                    android:id="@+id/reply_space"
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/msg_reply_txt"
                    app:layout_constraintTop_toBottomOf="@id/reply_to" />

                <TextView
                    android:id="@+id/msg_reply_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="1"
                    android:background="@drawable/textmsg_bg_in"
                    android:focusable="true"
                    android:maxLines="2"
                    android:minWidth="@dimen/conversation_avatar_size"
                    android:minHeight="@dimen/conversation_avatar_size"
                    android:padding="10dp"
                    android:textColor="@color/colorOnSurface"
                    android:textColorHighlight="@color/conversation_primary_selection"
                    android:textColorLink="@color/text_color_primary_dark"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/reply_space"
                    app:layout_constraintTop_toBottomOf="@id/reply_to"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/message_bubble"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/textmsg_bg_in"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@id/msg_content"
                app:layout_constraintStart_toEndOf="@id/photo"
                app:layout_constraintTop_toBottomOf="@id/msg_reply_content">

                <TextView
                    android:id="@+id/msg_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="1"
                    android:focusable="true"
                    android:paddingHorizontal="@dimen/padding_medium"
                    android:paddingVertical="@dimen/padding_medium"
                    android:textColor="@color/colorOnSurface"
                    android:textColorLink="@color/link_peer_color"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="yo salut dvfhyyjuuki9piossssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss" />

                <TextView
                    android:id="@+id/msg_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.6"
                    android:paddingStart="8dp"
                    android:paddingEnd="@dimen/padding_medium"
                    android:paddingBottom="@dimen/padding_medium"
                    android:singleLine="true"
                    android:textColor="@color/colorOnSurface"
                    android:textSize="@dimen/text_size_xsmall"
                    app:layout_constraintBottom_toBottomOf="@id/msg_txt"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="14:30am" />
                <!-- if time is in the right end corner do :
                    add: app:layout_constraintTop_toBottomOf="@id/msg_txt"
                    delete: app:layout_constraintBottom_toBottomOf="@id/msg_txt"-->
                <include
                    layout="@layout/msg_link_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/msg_time"
                    tools:visibility="visible" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/reaction_chip"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-16dp"
                android:layout_marginEnd="8dp"
                android:elevation="4dp"
                android:text="👍 😍 3"
                app:chipBackgroundColor="@color/icon_background_color"
                app:chipCornerRadius="5dp"
                app:chipEndPadding="0dp"
                app:chipStartPadding="0dp"
                app:chipStrokeColor="@color/border_color"
                app:layout_constraintEnd_toEndOf="@id/message_bubble"
                app:layout_constraintTop_toBottomOf="@id/message_bubble"
                app:textEndPadding="5dp"
                app:textStartPadding="5dp" />

            <ImageView
                android:id="@+id/photo"
                android:layout_width="34dp"
                android:layout_height="@dimen/conversation_avatar_size"
                android:layout_gravity="start"
                android:background="@color/red_800"
                android:contentDescription="@string/content_avatar"
                android:elevation="5dp"
                android:minWidth="30dp"
                android:minHeight="30dp"
                app:layout_constraintBottom_toBottomOf="@id/message_bubble"
                app:layout_constraintStart_toStartOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>