                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/pref_connection_monitor" />

                    <TextView
                        style="@style/ListSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pref_logs_summary" />

                </LinearLayout>

            </RelativeLayout>


