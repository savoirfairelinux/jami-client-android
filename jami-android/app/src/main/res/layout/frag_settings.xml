                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/pref_push_notifications_logs_title" />

                    <TextView
                        style="@style/ListSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pref_push_notifications_logs_summary" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
