                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text="@string/pref_available_extensions_title"
                    android:layout_toEndOf="@id/manage_extensions_image"
                    android:layout_marginEnd="16dp" />

                <TextView
                    style="@style/ListSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_available_extensions_summary"
                    android:layout_toEndOf="@id/manage_extensions_image"
