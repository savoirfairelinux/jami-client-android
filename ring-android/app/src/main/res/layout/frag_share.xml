<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/qr_image_panel"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@color/black"
        android:padding="10dp">

        <ImageView
            android:id="@+id/qr_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null" />

    </LinearLayout>


    <TextView
        android:id="@+id/share_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/qr_image_panel"
        android:layout_below="@id/qr_image_panel"
        android:layout_marginTop="24sp"
        android:text="@string/share_label"
        android:textColor="@color/color_primary_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/share_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/qr_image_panel"
        android:layout_alignLeft="@+id/share_label"
        android:layout_alignRight="@+id/qr_image_panel"
        android:layout_alignStart="@+id/share_label"
        android:layout_below="@id/share_label"
        android:autoLink="web"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="ring:0686476ddef320c78a71fe48fb2660f6d895f03d" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/qr_image_panel"
        android:layout_alignEnd="@+id/qr_image_panel"
        android:layout_alignLeft="@+id/qr_image_panel"
        android:layout_alignRight="@+id/qr_image_panel"
        android:layout_alignStart="@+id/qr_image_panel"
        android:paddingBottom="24dp"
        android:paddingTop="16dp"
        android:text="@string/share_message"
        android:textColor="@color/text_color_primary"
        android:textSize="14sp" />

</RelativeLayout>